<div class="columns is-multiline">
  <div class="column is-12 register">
    <div class="columns">
      <div class="column left is-4 has-text-centered is-flex is-flex-direction-column is-justify-content-center">
        <h1 class="title is-1">Social-Latte</h1>
        <h2 class="subtitle colored is-5 has-text-primary">facilitates communication and interaction with the individuals who are a part of your existence.</h2>
      </div>
      <div class="column right has-text-centered box is-7 is-offset-1">
        <h1 class="title is-4">Sign up today</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/registrations/form", f: f %>

          <%= f.submit "Submit", class: "button is-block is-primary is-fullwidth is-medium" %>
          <br />
          <small><em>
            Already have an account?
            <a href="<%= new_user_session_path %>">Log in</a>
          </em></small>
        <% end %>
      </div>
    </div>
  </div>
</div>